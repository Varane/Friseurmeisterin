---
import { getSiteData, withBase } from '@lib/site';
const site = getSiteData();
---
<footer class="border-t border-black/5 bg-white">
  <div class="container-pad grid gap-8 py-10 md:grid-cols-3">
    <div class="space-y-3">
      <p class="text-lg font-semibold">{site.businessName}</p>
      <p class="text-sm text-ink/70">{site.tagline}</p>
      <a class="inline-flex text-sm font-medium text-accent focus-ring" href={site.socials.instagramUrl}>
        Instagram
      </a>
    </div>
    <div class="space-y-2 text-sm">
      <p class="font-semibold">Kontakt</p>
      <p>{site.contact.address}</p>
      <p>{site.contact.phone}</p>
      <p>{site.contact.email}</p>
    </div>
    <div class="space-y-2 text-sm">
      <p class="font-semibold">Rechtliches</p>
      <a class="block focus-ring" href={withBase('/impressum')}>Impressum</a>
      <a class="block focus-ring" href={withBase('/datenschutz')}>Datenschutz</a>
      <a class="block focus-ring" href={site.contact.mapsUrl}>Google Maps</a>
    </div>
  </div>
  <div class="border-t border-black/5 py-4 text-center text-xs text-ink/60">
    <p>Â© {new Date().getFullYear()} {site.businessName}. PLACEHOLDER_LEGAL_NOTE</p>
  </div>
</footer>
