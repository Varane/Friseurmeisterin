---
import { getFeaturedProducts } from '@lib/products';
import { withBase } from '@lib/site';
import ProductCard from './ProductCard.astro';

const products = getFeaturedProducts();
---
<section class="container-pad py-14">
  <div class="flex items-center justify-between">
    <div>
      <p class="text-sm font-semibold uppercase tracking-[0.2em] text-ink/50">Shop</p>
      <h2 class="font-serif text-3xl font-semibold text-ink">Ausgew√§hlte Produkte</h2>
    </div>
    <a class="text-sm font-semibold text-accent focus-ring" href={withBase('/shop')}>
      Zum Shop
    </a>
  </div>
  <div class="mt-8 grid gap-6 md:grid-cols-3">
    {products.map((product) => (
      <ProductCard product={product} />
    ))}
  </div>
</section>
