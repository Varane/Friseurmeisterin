---
import { getSiteData } from '@lib/site';
const site = getSiteData();
---
<section id="services" class="container-pad py-14">
  <div class="flex flex-col gap-6 md:flex-row md:items-end md:justify-between">
    <div>
      <p class="text-sm font-semibold uppercase tracking-[0.2em] text-ink/50">Services</p>
      <h2 class="font-serif text-3xl font-semibold text-ink">Leistungen mit Pers√∂nlichkeit</h2>
    </div>
    <p class="max-w-xl text-ink/70">{site.aboutText}</p>
  </div>
  <div class="mt-8 grid gap-6 md:grid-cols-3">
    {site.services.map((service) => (
      <article class="card p-6" key={service.title}>
        <h3 class="text-lg font-semibold">{service.title}</h3>
        <p class="mt-3 text-sm text-ink/70">{service.description}</p>
      </article>
    ))}
  </div>
</section>
