---
import { getSiteData } from '@lib/site';
const site = getSiteData();
---
<section id="contact" class="container-pad py-14">
  <div class="grid gap-8 lg:grid-cols-[1.2fr_1fr]">
    <div class="space-y-4">
      <p class="text-sm font-semibold uppercase tracking-[0.2em] text-ink/50">Kontakt</p>
      <h2 class="font-serif text-3xl font-semibold text-ink">Termin &amp; Beratung</h2>
      <p class="text-ink/70">PLACEHOLDER_CONTACT_TEXT</p>
      <div class="grid gap-2 text-sm text-ink/70">
        <p>{site.contact.address}</p>
        <p>{site.contact.phone}</p>
        <p>{site.contact.email}</p>
      </div>
      <div class="flex flex-wrap gap-4">
        <a class="rounded-full bg-ink px-5 py-2 text-sm font-semibold text-white focus-ring" href={site.bookingUrl}>
          {site.heroCtaLabel}
        </a>
        <a class="rounded-full border border-ink/20 px-5 py-2 text-sm font-semibold text-ink focus-ring" href={site.contact.mapsUrl}>
          Google Maps
        </a>
      </div>
    </div>
    <div class="card flex flex-col justify-between gap-6 p-6">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-ink/50">Hinweis</p>
        <p class="mt-3 text-sm text-ink/70">
          PLACEHOLDER_CONTACT_NOTE
        </p>
      </div>
      <div class="rounded-xl bg-blush p-4 text-xs text-ink/70">
        PLACEHOLDER_OPENING_HOURS
      </div>
    </div>
  </div>
</section>
