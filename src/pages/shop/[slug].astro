---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getProducts, getProductBySlug } from '@lib/products';
import { withBase } from '@lib/site';
import { renderMarkdown } from '@lib/markdown';

export const getStaticPaths = async () => {
  const products = getProducts();
  return products.map((product) => ({
    params: { slug: product.slug }
  }));
};

const { slug } = Astro.params;
const product = slug ? getProductBySlug(slug) : undefined;
if (!product) {
  throw new Error('Product not found');
}

const buyEnabled = Boolean(product.paymentLinkUrl);
const descriptionHtml = renderMarkdown(product.description);
const usageHtml = product.usage ? renderMarkdown(product.usage) : '';
const ingredientsHtml = product.ingredients ? renderMarkdown(product.ingredients) : '';
---
<BaseLayout title={product.name} description={product.shortDescription}>
  <section class="container-pad py-16">
    <div class="grid gap-10 lg:grid-cols-2">
      <div class="space-y-4">
        {product.images?.length ? (
          <div class="grid gap-4">
            {product.images.map((image, index) => (
              <img
                src={withBase(image.src)}
                alt={image.alt}
                width="640"
                height="520"
                class={`aspect-[4/5] w-full rounded-2xl object-cover ${index === 0 ? '' : 'opacity-90'}`}
                loading={index === 0 ? 'eager' : 'lazy'}
                decoding="async"
              />
            ))}
          </div>
        ) : (
          <div class="flex h-64 items-center justify-center rounded-2xl border border-line bg-mist text-sm text-ink/60">
            PLACEHOLDER_PRODUCT_IMAGE
          </div>
        )}
      </div>
      <div class="space-y-6">
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.3em] text-ink/50">{product.brand}</p>
          <h1 class="font-serif text-4xl font-semibold text-ink md:text-5xl">{product.name}</h1>
          <p class="mt-3 text-sm text-ink/70">{product.shortDescription}</p>
        </div>
        <div class="rounded-2xl border border-line bg-white p-6">
          <div class="flex items-center justify-between">
            <span class="text-sm text-ink/60">Preis</span>
            <span class="text-lg font-semibold">€ {product.priceEur.toFixed(2)}</span>
          </div>
          <div class="mt-3 flex items-center justify-between text-sm text-ink/60">
            <span>Kategorie</span>
            <span>{product.category}</span>
          </div>
          <div class="mt-3 flex items-center justify-between text-sm text-ink/60">
            <span>Verfügbarkeit</span>
            <span>{product.inStock ? 'Sofort verfügbar' : 'Aktuell nicht verfügbar'}</span>
          </div>
          <div class="mt-6">
            {buyEnabled ? (
              <a
                class="inline-flex w-full items-center justify-center rounded-full bg-accent px-6 py-3 text-xs font-semibold uppercase tracking-[0.2em] text-white hover:bg-accent/90 focus-ring"
                href={product.paymentLinkUrl}
              >
                Buy now
              </a>
            ) : (
              <button
                type="button"
                class="w-full rounded-full border border-line px-6 py-3 text-xs font-semibold uppercase tracking-[0.2em] text-ink/40"
                disabled
              >
                Checkout nicht konfiguriert
              </button>
            )}
            <p class="mt-3 text-xs text-ink/50">Zahlung via Stripe Payment Link (Gast-Checkout).</p>
          </div>
        </div>
        <div class="space-y-6">
          <div>
            <h2 class="text-lg font-semibold">Beschreibung</h2>
            <div class="prose prose-sm max-w-none text-ink/70" set:html={descriptionHtml}></div>
          </div>
          {usageHtml ? (
            <div>
              <h2 class="text-lg font-semibold">Anwendung</h2>
              <div class="prose prose-sm max-w-none text-ink/70" set:html={usageHtml}></div>
            </div>
          ) : null}
          {ingredientsHtml ? (
            <div>
              <h2 class="text-lg font-semibold">Inhaltsstoffe</h2>
              <div class="prose prose-sm max-w-none text-ink/70" set:html={ingredientsHtml}></div>
            </div>
          ) : null}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
