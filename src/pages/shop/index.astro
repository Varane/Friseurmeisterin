---
import BaseLayout from '@layouts/BaseLayout.astro';
import ProductCard from '@components/ProductCard.astro';
import { getProducts, getProductCategories, sortProducts } from '@lib/products';
import filtersScript from '@components/Filters.client.ts';

const products = sortProducts(getProducts(), 'default');
const categories = getProductCategories();
const prices = products.map((product) => product.priceEur);
const minPrice = prices.length ? Math.min(...prices) : 0;
const maxPrice = prices.length ? Math.max(...prices) : 0;
---
<BaseLayout title="Shop" description="PLACEHOLDER_SHOP_DESCRIPTION">
  <section class="container-pad py-16">
    <div class="flex flex-col gap-4 md:flex-row md:items-end md:justify-between">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-ink/50">Shop</p>
        <h1 class="font-serif text-4xl font-semibold text-ink md:text-5xl">Produkte</h1>
        <p class="mt-2 text-sm text-ink/70">PLACEHOLDER_SHOP_INTRO</p>
      </div>
      <div class="rounded-full border border-line px-4 py-2 text-xs uppercase tracking-[0.2em] text-ink/60">
        <span data-result-count>{products.length}</span> Artikel
      </div>
    </div>

    <details data-filter-drawer class="mt-10 rounded-2xl border border-line bg-white p-5 md:p-6">
      <summary class="cursor-pointer text-xs font-semibold uppercase tracking-[0.3em] text-ink/70 md:hidden">
        Filter anzeigen
      </summary>
      <form data-filter-form class="mt-5 grid gap-4 md:mt-0 md:grid-cols-4">
        <label class="text-xs font-semibold uppercase tracking-[0.2em] text-ink/60">
          Kategorie
          <select name="category" class="mt-2 w-full rounded-lg border border-line bg-white px-3 py-2 text-sm focus-ring">
            <option value="">Alle</option>
            {categories.map((category) => (
              <option value={category} key={category}>{category}</option>
            ))}
          </select>
        </label>
        <label class="text-xs font-semibold uppercase tracking-[0.2em] text-ink/60">
          Preis min
          <input
            type="number"
            name="minPrice"
            min={minPrice}
            max={maxPrice}
            placeholder={`${minPrice}`}
            class="mt-2 w-full rounded-lg border border-line bg-white px-3 py-2 text-sm focus-ring"
          />
        </label>
        <label class="text-xs font-semibold uppercase tracking-[0.2em] text-ink/60">
          Preis max
          <input
            type="number"
            name="maxPrice"
            min={minPrice}
            max={maxPrice}
            placeholder={`${maxPrice}`}
            class="mt-2 w-full rounded-lg border border-line bg-white px-3 py-2 text-sm focus-ring"
          />
        </label>
        <label class="text-xs font-semibold uppercase tracking-[0.2em] text-ink/60">
          Suche
          <input
            type="search"
            name="search"
            placeholder="Produkt oder Marke"
            class="mt-2 w-full rounded-lg border border-line bg-white px-3 py-2 text-sm focus-ring"
          />
        </label>
        <label class="text-xs font-semibold uppercase tracking-[0.2em] text-ink/60 md:col-span-2">
          Sortieren
          <select name="sort" class="mt-2 w-full rounded-lg border border-line bg-white px-3 py-2 text-sm focus-ring">
            <option value="default">Empfohlen</option>
            <option value="price-asc">Preis aufsteigend</option>
            <option value="price-desc">Preis absteigend</option>
          </select>
        </label>
        <div class="flex items-end gap-3 md:col-span-2">
          <button
            type="button"
            data-reset-filters
            class="rounded-full border border-ink px-4 py-2 text-[0.65rem] font-semibold uppercase tracking-[0.2em] text-ink focus-ring"
          >
            Filter zur√ºcksetzen
          </button>
        </div>
      </form>
    </details>

    <div data-products-grid class="mt-10 grid grid-cols-2 gap-6 md:grid-cols-3 lg:grid-cols-4">
      {products.map((product) => (
        <ProductCard product={product} />
      ))}
    </div>
  </section>
  <script type="module" src={filtersScript}></script>
</BaseLayout>
