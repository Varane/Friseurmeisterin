---
import BaseLayout from '@layouts/BaseLayout.astro';
import policies from '@data/policies.json';
---
<BaseLayout title="Datenschutz" description="PLACEHOLDER_DATA_PROTECTION_DESCRIPTION">
  <section class="container-pad py-12">
    <h1 class="font-serif text-4xl font-semibold text-ink">Datenschutz</h1>
    <div class="mt-6 space-y-6 text-sm text-ink/70">
      <p>PLACEHOLDER_DATA_PROTECTION_TEXT</p>
      <div class="grid gap-6 md:grid-cols-2">
        <div class="card p-6">
          <h2 class="text-lg font-semibold">Versand</h2>
          <p class="mt-3">{policies.shipping.text}</p>
          <p class="mt-2 text-xs text-ink/50">Geltungsbereich: {policies.shipping.scope}</p>
        </div>
        <div class="card p-6">
          <h2 class="text-lg font-semibold">Retouren</h2>
          <p class="mt-3">{policies.returns.text}</p>
        </div>
      </div>
      <p>PLACEHOLDER_DATA_PROTECTION_NOTE</p>
    </div>
  </section>
</BaseLayout>
